{
    "background": {
        "scripts": ["background.js"]
    },
    "name": "pprefox",
    "description": "Allows the theme of your browser to be changed using external programs.",
    "manifest_version": 2,
    "version": "1.0",
    "homepage_url": "https://github.com/duckfromdiscord/pprefox",
    "icons": {},
    "permissions": [
        "management",
        "nativeMessaging",
        "tabs"
    ],
    "applications": {
        "gecko": {
            "id": "pprefox@duckfromdiscord.github.io",
            "strict_min_version": "50.0"
        }
     }
}